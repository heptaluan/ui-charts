{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "client"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "dyassets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "lx",
      "styles": [
        "../node_modules/@nebular/theme/styles/prebuilt/default.css",
        "../node_modules/bootstrap/dist/css/bootstrap.css",
        "dyassets/css/iconfont.css",
        "dyassets/css/nebular-icons.css",
        "styles.scss",
        "../node_modules/jquery-ui/themes/base/all.css",
        "../node_modules/ngx-toastr/toastr.css",
        "../node_modules/swiper/dist/css/swiper.min.css",       
        "dyassets/css/wheelcolorpicker.css"
      ],
      "scripts": [     
        "dyassets/js/loading.js",
        "dyassets/js/d3/d3.v5.min.js",
        "dyassets/js/d3/d3-chart.min.js",
        "dyassets/js/d3/md5.min.js",
        "../node_modules/jquery/dist/jquery.min.js",
        "dyassets/js/dom-to-image.js",
        "dyassets/js/dragSelect.js",
        "dyassets/js/gif.min.js",
        "dyassets/js/gif.js",
        "dyassets/js/gif.worker.js",
        "dyassets/js/fontfaceobserver.js",
        "dyassets/fonts/dy-icon-font/iconfont.js",
        "dyassets/js/tagcanvas.js",
        "../node_modules/swiper/dist/js/swiper.min.js",
        "dyassets/js/jquery.wheelcolorpicker.js",
        "dyassets/js/parabola.js",
        "dyassets/js/jszip.min.js",
        "dyassets/js/better-scroll.js",
        "dyassets/js/socket.io.min.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      },
      "serviceWorker": true
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {}
  }
}
